# Server Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/msj-hackathon
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/msj-hackathon?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-for-refresh-tokens# JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration (comma-separated origins)
# For development: use * to allow all origins
# For production: list specific domains
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info

# Email Configuration
# For Mailtrap (development): Use Mailtrap SMTP settings
# For production: Use real SMTP service (Gmail, SendGrid, Mailgun, etc.)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-username
SMTP_PASS=your-mailtrap-password
EMAIL_FROM=MSJ Hackathon API <noreply@msj.com>

# Frontend URL (for password reset links and CORS)
# Change this to match where your frontend app runs
FRONTEND_URL=http://localhost:3000
